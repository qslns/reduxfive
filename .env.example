# Database Configuration
# For development, you can use SQLite: DATABASE_URL="file:./dev.db"
# For production, use PostgreSQL: DATABASE_URL="postgresql://user:password@localhost:5432/redux_cms"
DATABASE_URL="postgresql://user:password@localhost:5432/redux_cms"

# JWT Configuration
# Generate a secure random string for production
JWT_SECRET="your-super-secure-jwt-secret-change-in-production"

# ImageKit Configuration (Already configured)
NEXT_PUBLIC_IMAGEKIT_PUBLIC_KEY=your_public_key
NEXT_PUBLIC_IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_id
IMAGEKIT_PRIVATE_KEY=your_private_key

# Redis Configuration (Optional - for caching)
REDIS_URL="redis://localhost:6379"

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@redux.com
DEFAULT_ADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_IN_PRODUCTION

# Rate Limiting (Optional)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif,video/mp4,video/webm

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=86400000
REFRESH_TOKEN_TIMEOUT=604800000